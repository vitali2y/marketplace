html, body
  width 100%
  height 100%
  padding 0
  margin 0


p, h2, li
  font-family "Roboto Slab", serif


// 'Marketplace Search' title
.market-title
  position relative
  font-size 30px
  text-align center
  div
    background-image -webkit-gradient(linear, left top, left bottom, from(#2dbe60), to(#e4f7eb))
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    position absolute
    width 100%
  &:after
    text-shadow 2px 2px 2px #000000
    color transparent


.gradient-shadow
  &:after
    content attr(title)


.inactive
  display none


.toast
  z-index 999999
  position absolute
  bottom 10px


.popover .popover-container
  width 220px


.overme
  overflow hidden
  white-space nowrap
  text-overflow ellipsis


#network-map
  width 576px
  height 260px
  border 1px solid #2dbe60
  p
    max-width 576px


.disabledMenu
  background-color #f0f1f4
  cursor not-allowed

.disabledLink
  pointer-events none
  cursor not-allowed



// new design
.marketplace
  padding-right 10px
  // width 99px
  height 22px
  font-family Avenir
  font-size 16px
  font-weight 900
  font-style normal
  font-stretch normal
  line-height normal
  letter-spacing 0.5px
  text-align center
  color #ffffff

.marketplace .text-style-1
  letter-spacing normal

.navbar-bg
  height 120px
  background-color #1c252e

.sa_logo
