html, body
  width 100%
  height 100%
  padding 0
  margin 0


p, h2, li
  font-family "Roboto Slab", serif


// 'Marketplace Search' title
.market-title
  position relative
  font-size 30px
  text-align center
  div
    background-image -webkit-gradient(linear, left top, left bottom, from(#0300cf), to(#f9f8ff))
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    position absolute
    width 100%
  &:after
    text-shadow 2px 2px 2px #000000
    color transparent


.gradient-shadow
  &:after
    content attr(title)


.inactive
  display none


.toast
  z-index 999999
  position absolute
  bottom 10px


.popover .popover-container
  width 220px


.overme
  overflow hidden
  white-space nowrap
  text-overflow ellipsis


#network-map
  height 260px
  width 576px
  border 1px solid #5755d9
  p
    max-width 576px
